<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>SkiaSharp</RootNamespace>
    <AssemblyName>SkiaSharp</AssemblyName>
    <PackagingGroup>SkiaSharp.WebAssembly</PackagingGroup>
    <DefineConstants>$(DefineConstants);__WASM__;USE_INTPTR_DELEGATES</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.3" />
  </ItemGroup>
  <ItemGroup>
    <None Include="nuget\build\wasm\SkiaSharp.targets" Link="nuget\build\$(PackagingPlatform)\SkiaSharp.WebAssembly.targets" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\Binding.Shared\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\Binding\**\*.cs" Link="%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="WebAssembly.Runtime.cs" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="WasmScripts\**\*" />
  </ItemGroup>
</Project>